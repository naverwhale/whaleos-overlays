# Initial value just for style purposes.
LINUX_FIRMWARE=""
USE=""

CHROMEOS_KERNEL_SPLITCONFIG="chromeos-intel-pineview"
CHROMEOS_KERNEL_ARCH="x86_64"
BOARD_COMPILER_FLAGS="-march=meteorlake"
BOARD_RUSTFLAGS="-Ctarget-cpu=meteorlake"
# TODO(timvp): Update to march_meteorlake when external libraries support it.
USE="${USE} march_alderlake"

# Specify default kernel
USE="${USE} kernel-6_1"

# Identify the vendor
USE="${USE} intel_cpu"

# Enable DPTF
USE="${USE} dptf"

# Enable GpuMemoryBuffers backed by dma-bufs.
USE="${USE} native_gpu_memory_buffers"

# Build IPU6EPMTL variant in cros-camera-hal-intel-ipu6.
USE="${USE} ipu6epmtl"

# Enable fscrypt v2 usage on 5.4+
USE="${USE} direncription_allow_v2"

# Enable Intel media-driver
USE="${USE} -video_cards_i965 video_cards_iHD video_cards_iHD_g12"

# Enable android_aep
USE="${USE} android_aep"

# Enable DRM/KMS atomic api
USE="${USE} drm_atomic"

# Enable VMs
USE="${USE} kvm_host crosvm-gpu virtio_gpu"

# Allows Chrome to start in the presence of multiple threads.
USE="${USE} gpu_sandbox_start_early"

#enable tile4 support
USE="${USE} intel_drm_tile4"

# make i915 firmwares (GuC,HuC,DMC) builtin
USE="${USE} builtin_fw_intel_mtl_i915"

# Enable vulkan
USE="${USE} vulkan"

# Enable clvk
USE="${USE} clvk"

# Enable HEVC/H.265 codec
# Do not copy this line to new chipsets without explicit approval
USE="${USE} hevc_codec"
