# Disk layout for baseboard-kukui. Adds space to rootfs filesystem without
# resizing the partitions.
# Can not use |fs_size_min| in the "common" section, as "factory_install" is shriking the root fs.
{
  "_comment": "See http://www.chromium.org/chromium-os/developer-guide/disk-layout-format",
  "metadata":{
    "rootdev_base": "/sys/devices/platform/soc/11230000.mmc/mmc_host/mmc*/mmc*:*/block/mmcblk*"
  },
  "parent": "disk_layout_v2.json",
  "layouts": {
    # base is the fixed device layout template.
    "base": [
      {
        "num": 3,
        "fs_size_min": "2600 MiB"
      }
    ],
    "usb": [
      {
        "num": 3,
        "fs_size_min": "2600 MiB",
        "size": "2800 MiB"
      }
    ],
    "usb-updatable": [
      {
        "num": 5,
        "size": "2800 MiB"
      },
      {
        "num": 3,
        "fs_size_min": "2600 MiB",
        "size": "2800 MiB"
      }
    ],
    "recovery": [
      {
        "num": 3,
        "fs_size_min": "2600 MiB",
        "size": "2800 MiB"
      }
    ]
  }
}
