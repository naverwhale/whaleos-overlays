# Initial value just for style purposes.
USE=""

USE="${USE} staryu"

# Enable AP firmware build
USE="${USE} bootimage"

# Enable EC firmware build
USE="${USE} zephyr_ec"

# Enable detachable base firmware build
USE="${USE} cros_ec"

# Enable unibuild
USE="${USE} unibuild has_chromeos_config_bsp"

# Uncomment these lines to activate the serial port.
# Enable kernel serial drivers
USE="${USE} pcserial"

# modemfwd is used for updating modem firmware.
USE="${USE} modemfwd"

# Declare set of enabled consoles
TTY_CONSOLE="ttyS0"

# Enable hammerd for updating base firmware
USE="${USE} hammerd"

# Disable Vboot CBFS Integration
USE="${USE} vboot_disable_cbfs_integration"

# Include the himax firmware updating tool
INPUT_DEVICES="${INPUT_DEVICES} himax"

# Include the ilitek firmware updating tool
INPUT_DEVICES="${INPUT_DEVICES} ilitek_tddi"
